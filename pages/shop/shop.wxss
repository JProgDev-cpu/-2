.container {
  padding: 20rpx;
  background: #f5f5f5;
}

.categories {
  white-space: nowrap;
  padding: 20rpx 0;
  background: #fff;
  margin-bottom: 20rpx;
}

.category-item {
  display: inline-block;
  padding: 15rpx 30rpx;
  margin: 0 15rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
}

.category-item.active {
  background: #4CAF50;
  color: #fff;
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx;
}

.product-item {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.product-image {
  width: 100%;
  height: 345rpx;
  object-fit: cover;
}

.product-info {
  padding: 16rpx;
}

.product-name {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.product-price {
  color: #ff6b6b;
  font-size: 32rpx;
  font-weight: bold;
}

.product-country {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

.add-to-cart {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background: #4CAF50;
  color: white;
  font-size: 24rpx;
  border-radius: 30rpx;
  padding: 0;
}

.add-to-cart::after {
  border: none;
} 