.container {
  padding: 20rpx;
  background: #f5f5f5;
}

.language-switcher {
  display: flex;
  justify-content: flex-end;
  padding: 20rpx;
  background: white;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
}

.language-switcher text {
  margin-left: 20rpx;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.language-switcher .active {
  background: #4CAF50;
  color: white;
}

.header {
  background: white;
  padding: 30rpx;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.spot-name {
  font-size: 32rpx;
  color: #666;
  margin-top: 10rpx;
  display: block;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.current-crowd {
  background: white;
  padding: 30rpx;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
}

.crowd-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.crowd-indicator {
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  color: white;
  font-size: 32rpx;
  min-width: 160rpx;
  text-align: center;
}

.timeline {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 200rpx;
  padding: 20rpx 0;
}

.timeline-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.time {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

.level-bar {
  width: 40rpx;
  border-radius: 20rpx;
  transition: height 0.3s ease;
}

.level-1 {
  background: #4CAF50;
  height: 60rpx;
}

.level-2 {
  background: #FFC107;
  height: 120rpx;
}

.level-3 {
  background: #FF5722;
  height: 180rpx;
}

.forecast {
  opacity: 0.6;
}

.visit-tips {
  background: white;
  padding: 30rpx;
  border-radius: 15rpx;
}

.best-time {
  margin-bottom: 20rpx;
}

.tip-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.tip-content {
  font-size: 28rpx;
  color: #333;
}

.tips-list {
  margin-top: 20rpx;
}

.tip-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.tip-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
} 