.container {
  padding: 20rpx;
  background: #f5f5f5;
}

.header {
  padding: 20rpx 0;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.spots-list {
  margin-top: 20rpx;
}

.spot-item {
  background: white;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.spot-image {
  width: 100%;
  height: 300rpx;
}

.spot-info {
  padding: 20rpx;
}

.spot-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.crowd-tag {
  display: inline-block;
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: white;
}

.level-1 {
  background: #4CAF50;
}

.level-2 {
  background: #FFC107;
}

.level-3 {
  background: #FF5722;
}

/* 弹窗样式 */
.spot-info-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
}

.spot-info-modal.show {
  visibility: visible;
  opacity: 1;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.spot-info-modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.modal-body {
  padding: 30rpx;
}

.detail-image {
  width: 100%;
  height: 400rpx;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
}

.spot-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 30rpx;
  display: block;
}

.crowd-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
}

.navigate-btn {
  background: #4CAF50;
  color: white;
  width: 100%;
  border-radius: 40rpx;
}

.navigate-btn::after {
  border: none;
}

.spot-details {
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.opening-hours {
  font-size: 24rpx;
  color: #666;
}

.opening-hours .label {
  margin-right: 10rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.info-row .label {
  color: #666;
}

.info-row .value {
  color: #333;
} 